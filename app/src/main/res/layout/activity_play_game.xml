<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PlayGameActivity"
    android:weightSum="3">

    <LinearLayout
        android:id="@+id/LinearLayout_from"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/text_enterNamesHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_playGamesHeader"
            android:textSize="30sp"
            android:textColor="#3CABFF"
            android:gravity="center"/>

    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_gravity="center">

        <Button
            android:id="@+id/button_00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:textSize="50sp"
            android:onClick="onClickTile"
            android:textColor="@color/colorPrimary"/>

        <Button
            android:id="@+id/button_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:textSize="50sp"
            android:onClick="onClickTile"
            android:textColor="@color/colorPrimary"/>

        <Button
            android:id="@+id/button_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:textSize="50sp"
            android:onClick="onClickTile"
            android:textColor="@color/colorPrimary"/>

        <Button
            android:id="@+id/button_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="50sp"
            android:onClick="onClickTile"
            android:textColor="@color/colorPrimary"/>

        <Button
            android:id="@+id/button_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:textSize="50sp"
            android:onClick="onClickTile"
            android:textColor="@color/colorPrimary"/>

        <Button
            android:id="@+id/button_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:textSize="50sp"
            android:onClick="onClickTile"
            android:textColor="@color/colorPrimary"/>

        <Button
            android:id="@+id/button_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:textSize="50sp"
            android:onClick="onClickTile"
            android:textColor="@color/colorPrimary"/>

        <Button
            android:id="@+id/button_21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:textSize="50sp"
            android:onClick="onClickTile"
            android:textColor="@color/colorPrimary"/>

        <Button
            android:id="@+id/button_22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:textSize="50sp"
            android:onClick="onClickTile"
            android:textColor="@color/colorPrimary"/>

    </GridLayout>

    <LinearLayout
        android:id="@+id/LinearLayout_turnInformation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/text_turnInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_gamePlayTurnInformation"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>